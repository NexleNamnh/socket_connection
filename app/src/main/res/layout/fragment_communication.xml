<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.myapplication.CommunicationFragment">

    <EditText
        android:id="@+id/ed_message"
        android:layout_width="match_parent"
        android:minHeight="100dp"
        android:hint="Enter your message"
        android:gravity="top"
        android:padding="5dp"
        android:background="@drawable/bg_edittext"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_send_message"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:text="Send message to peer"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Message from Peer"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_message_from_peer"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:text="Receiving message..."
        android:layout_height="wrap_content" />

</LinearLayout>
